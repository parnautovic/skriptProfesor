<% if user_signed_in? %>


<table class="table table-striped table-dark table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends_apps.each do |friends_app| %>
      <tr>
        <td><%= friends_app.first_name %></td>
        <td><%= friends_app.last_name %></td>
        <td><%= friends_app.email %></td>
        <td><%= friends_app.phone %></td>
        <td><%= friends_app.twitter %></td>
        <td><%= friends_app.user_id %></td>
        <td><%= link_to 'Show', friends_app %></td>
        <td><%= link_to 'Edit', edit_friends_app_path(friends_app) %></td>
        <td><%= link_to 'Destroy', friends_app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New Friends App', new_friends_app_path, class:"btn btn-secondary"%>
<% else %>
<h1>Friends App HOME</h1>


<% end %>